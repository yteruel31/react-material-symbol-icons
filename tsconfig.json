{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDirs": ["src", ".storybook", "scripts"],
    "jsx": "react",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "./.storybook",
      "./scripts"
  ],

}
